# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=editorial_db
POSTGRES_USER=editorial_user
POSTGRES_PASSWORD=change_me_strong_password

# pgAdmin (Interface web pour PostgreSQL)
PGADMIN_EMAIL=admin@editorial.dev
PGADMIN_PASSWORD=admin

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
# Nombre de GPU à utiliser (par défaut: 1, mettre "cpu" pour forcer CPU)
OLLAMA_NUM_GPU=1

# API Keys (optionnel)
TAVILY_API_KEY=
OPENAI_API_KEY=

# Scraping
USER_AGENT=EditorialBot/1.0 (+https://your-site.com/bot)
CRAWL_DELAY_DEFAULT=2
MAX_PAGES_PER_DOMAIN=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_ANALYSIS_PER_MINUTE=10

# Data Retention
DATA_RETENTION_DAYS=90

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Output Paths
OUTPUT_BASE_PATH=/mnt/user-data/outputs
VISUALIZATIONS_PATH=/mnt/user-data/outputs/visualizations

# Ideogram API
IDEOGRAM_API_KEY=ik_xxxxxxxxxxxx
IDEOGRAM_MODEL=V_2
IDEOGRAM_DEFAULT_STYLE=DESIGN
IMAGE_PROVIDER=ideogram
IMAGE_FALLBACK_TO_LOCAL=false

